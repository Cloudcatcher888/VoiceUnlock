<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78acfb"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/tbl_reset"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tbl_hitung"
            android:layout_alignBottom="@+id/tbl_hitung"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:onClick="onClick"
            android:text="Reset" />

        <Button
            android:id="@+id/tbl_hitung"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tbl_rekam"
            android:layout_alignBottom="@+id/tbl_rekam"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:onClick="onClick"
            android:text="Hitung Nilai" />

        <Button
            android:id="@+id/tbl_rekam"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/progress"
            android:layout_marginTop="31dp"
            android:onClick="onClick"
            android:text="Rekam" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:maxHeight="12dp"
            android:maxWidth="30dp"
            android:src="@drawable/text" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>